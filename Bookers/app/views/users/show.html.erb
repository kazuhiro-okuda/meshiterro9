<%= render "home/header" %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<div class="user-image">
				<%= attachment_image_tag @user, :avatar_image, :fill, 60, 60,format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.self_introduction_text %></th>
					</tr>
				</tbody>
			</table>
			<div>
				<%= link_to '', edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
			</div>
	        <div>
			<h2>New book</h2>

			<% if @newbook.errors.any? %>
				<div id="error_explanation">
					<h2><%= @newbook.errors.count %>件のエラーが発生しました。</h2>
					<ul>
						<% @newbook.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@newbook) do |f| %>
			<div class="field">
				<label for="book_title", class="col-xs-12">Title</label>
				<%= f.text_field :title, class: "book_title col-xs-12" %>
			</div>
			<div class="field">
				<label for="book_opinion", class="col-xs-12">Opinion</label>
				<%= f.text_area :opinion, class: "book_body col-xs-12" %>
			</div>

			<div class="actions">
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
			</div>
			<% end %>
		    </div>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody><% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(@user.id), class: "user_#{@user.id}" do %>
							<%= attachment_image_tag @user, :avatar_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
							<% end %></td>
						<td><%= link_to book_path(book.id), class: "book_#{book.id}" do%>
								<%= book.title %>
								<% end %>
						</td>
						<td><%= book.opinion %></td>
						<td></td>
						<td></td>
					</tr>
						<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
	    </div>
	</div>
</footer>