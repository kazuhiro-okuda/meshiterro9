<%= render "home/header" %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<div class="user-image">
				<%= attachment_image_tag @user, :avatar_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			</div>
			<table class="table">
				<tbody>
					<tr>
						<th class="col-xs-12">name</th>
						<th class="col-xs-12"><%= @user.name %></th>
					</tr>
					<tr>
						<th class="col-xs-12">introduction</th>
						<th class="col-xs-12"><%= @user.self_introduction_text %></th>
					</tr>
				</tbody>
			</table>
				<%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
			<h2>New book</h2>

			<% if @book.errors.any? %>
				<div id="error_explanation">
					<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= form_for(@book) do |f| %>
			<div class="field">
				<label class="book_title">Title</label>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>
			<div class="field">
				<label class="book_body">Opinion</label>
				<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
			</div>

			<div class="actions">
				<%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
			</div>
			<% end %>
	    </div>

	    <div class="col-xs-9">
			<h2>Users</h2>

			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody><% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :avatar_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
						</td>
						<td><%= user.name %></td>
						<td><%= link_to "show", user_path(user.id), class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
        </div>
    </div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
	    </div>
	</div>
</footer>