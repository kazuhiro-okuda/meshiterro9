<%= render "home/header" %>

<div class="container">

	<div class="row">

		<div class="col-md-6 col-md-offset-3">

			<h1>Editing Book</h1>

			<%= form_for(@book) do |f| %>

			<h4>Title</h4>

			<%= f.text_field :title, class:"book_title" %>

			<h4>Opinion</h4>

			<%= f.text_area :opinion, class:"book_body" %>

			<div><%= f.submit 'Update Book', class: "btn btn-primary" %></div>

			<% end %>

			<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>

			<%= link_to "Back", books_path, class:"back", class: "back" %>
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
	    </div>
	</div>
</footer>