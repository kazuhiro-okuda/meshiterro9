<header class="navbar navbar-fixed-top navbar-inverse" >
	<div class="container">
		<div><p class="bookers_title">Bookers</p></div>
			<ul class="nav_box">
				<% if user_signed_in? %>
				<li class="nav_item"><%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home text-muted home" %></li>
				<li class="nav_item"><%= link_to "Users", users_path, class: "glyphicon glyphicon-link text-muted users" %></li>
				<li class="nav_item"><%= link_to "Books", books_path, class: "glyphicon glyphicon-book text-muted books" %></li>
				<li class="nav_item"><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out text-muted logout" %></li>
				<% else %>
				<li class="nav_item"><%= link_to "Home", home_path, class: "glyphicon glyphicon-home text-muted home" %></li>
				<li class="nav_item"><%= link_to "About", home_about_path, class: "glyphicon glyphicon-edit text-muted about" %></li>
				<li class="nav_item"><%= link_to "Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit text-muted sign_up"%></li>
				<li class="nav_item"><%= link_to "login", user_session_path, class: "glyphicon glyphicon-log-in text-muted sign_in" %></li>
				<% end %>
			</ul>
